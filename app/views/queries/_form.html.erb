<%= simple_form_for(@query, :validate => true) do |f| %>
  
<%= f.error_notification %>


<div class="form-inputs">
    <%= f.input :name, :placeholder => 'Please Enter Full Name'  %>
    <%= f.input :email, :placeholder => 'Please Enter your Email ID' %>
    
    <%= f.input :subject, :placeholder => 'Subject of your Query?' %>
    <%= f.input :message, :as => :text, :input_html => { :rows => 3 }, :placeholder => 'Please Enter your Query.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Send Message', :class => 'btn btn-success' %>
  </div>
  
  
   
  
 
  
<% end %>
