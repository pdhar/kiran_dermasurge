<%= simple_form_for(@testimonial, :remote => true, :validate => true ) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
	<%= f.input :name, :placeholder => 'Please Enter Full Name' %>
	<%= f.input :email, :placeholder => 'Please Enter your Email ID' %>
	<%= f.input :message, :as => :text, :input_html => { :rows => 3 }, :placeholder => 'Please Enter your Testimonial.' %>
</div>

<div class="form-actions">
	<%= f.button :submit,'Submit Testimonial', :class => 'btn btn-normal btn-primary' %>
	<a id="testimonial-form-cancel" class="btn btn-small btn-primary" href='javascript:;' >Cancel</a>
</div>

<script>
	$('#testimonial-form-cancel').click(function(e) {
		//Close all <div> but the <div> right after the clicked <a>
		//$(e.target).next('div').siblings('div').slideUp();
		//Toggle open/close on the <div> after the <a>, opening it if not open.
		$('#testimonial_container').slideToggle(900);
		$('#new_testimonial').remove();
		$('#new_link').fadeIn(900);
	}); 
</script>

<% end %>
