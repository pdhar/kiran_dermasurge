<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container" valign="center">

			<!--<%= link_to "kiran dermasurge", root_path, id: "logo" %>-->
			<%= link_to image_tag("kds_logo.png", alt: "Rails", border: "0"), root_path, id: "logo", :class => 'brand' %>

			<nav>
				<ul class="nav pull-left">
					<!-- Services,  Out Doctor, What's New, Media, Testimonial, FAQ's , Contact-->

					<li>
						<%= link_to "Services", "#" %>
					</li>
					<li class="divider-vertical"></li>
					<li>
						<%= link_to "Our Doctors", "#" %>
					</li>
					<li class="divider-vertical"></li>
					<li>
						<%= link_to "What's New", "#" %>
					</li>
					<li class="divider-vertical"></li>
					<li>
						<%= link_to "Locations", "#" %>
					</li>
					<li class="divider-vertical"></li>
					<li>
						<%= link_to "Testimonial", "#" %>
					</li>

				</ul>
				<ul class="nav pull-right">
					<li class="divider-vertical"></li>

					<% if user_signed_in? %>
					<li>
						<div class="btn-group">
							<a class="btn btn-primary" href="#"><i class="icon-user icon-white"></i>&nbsp; <%= current_user.username %> </a>
							<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li>

									<%= link_to "Profile", edit_user_registration_path %>
								</li>
								<li>
									<a href="#"><i class="icon-trash"></i> Settings</a>
