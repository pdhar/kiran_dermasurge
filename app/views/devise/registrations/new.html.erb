<h2>Sign up</h2>
<br/>
<div class="row">
  <div class="span6 offset3">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, :placeholder => "Email" %></div>
  
  <div><%= f.text_field :username, :placeholder => "Username" %></div>

  <% if f.object.password_required? %>
	  <div><%= f.password_field :password, :placeholder => "Password" %></div>
	
	  <div><%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>
  <%end%>
  
  <div><%= f.submit "Sign up", class: "btn btn-large btn-primary" %></div>
  <br/>
  <%= render "devise/shared/links" %>
<% end %>
</div>
</div>

