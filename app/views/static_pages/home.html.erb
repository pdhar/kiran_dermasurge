<script type="text/javascript">
	$(function() {
		$('.bgDescription').css({
			'opacity' : 0.35
		});
		
		$('#accordion > li').hover(function() {
			var $this = $(this);
			
			//alert($(this).attr('id'));
			
			$this.stop().animate({
				'width' : '450px'
			}, 450);

			$('.heading', $this).stop(true, true).slideUp(400);
			//$('.bgImage', $this).stop(true, true).fadeIn(1500);

			$('.bgDescription', $this).stop(true, true).slideDown(500);
			$('.description', $this).stop(true, true).fadeIn();

			$this.siblings().stop().animate({
				'width' : '85px'
			}, 450);
			
			switch($(this).attr('id')){
				case 'accordion1':
					$(this).removeClass('bg1').addClass('bg1_color');
					break;
				case 'accordion2':
					$(this).removeClass('bg2').addClass('bg2_color');
					break;
				case 'accordion3':
					$(this).removeClass('bg3').addClass('bg3_color');
					break;
				case 'accordion4':
					$(this).removeClass('bg4').addClass('bg4_color');
					break;
				case 'accordion5':
					$(this).removeClass('bg5').addClass('bg5_color');
					break;
				case 'accordion6':
					$(this).removeClass('bg6').addClass('bg6_color');
					break;
			}

		}, function() {
			var $this = $(this);
			$this.stop().animate({
				'width' : '145px'
			}, 450);
			
			//$('.bgImage', $this).stop(true, true).fadeOut(100);
			$('.description', $this).stop(true, true).fadeOut(500);
			$('.bgDescription', $this).stop(true, true).slideUp(500);
			$('.heading', $this).stop(true, true).slideDown(500);

			$this.siblings().stop().animate({
				'width' : '145px'
			}, 450);
			
			switch($(this).attr('id')){
				case 'accordion1':
					$(this).removeClass('bg1_color').addClass('bg1');
					break;
				case 'accordion2':
					$(this).removeClass('bg2_color').addClass('bg2');
					break;
				case 'accordion3':
					$(this).removeClass('bg3_color').addClass('bg3');
					break;
				case 'accordion4':
					$(this).removeClass('bg4_color').addClass('bg4');
					break;
				case 'accordion5':
					$(this).removeClass('bg5_color').addClass('bg5');
					break;
				case 'accordion6':
					$(this).removeClass('bg6_color').addClass('bg6');
					break;
			}

		});
	}); 
</script>

