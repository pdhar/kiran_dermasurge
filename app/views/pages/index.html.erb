<h1>Listing pages</h1>
<div class="span8">
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Name</th>
				<th>Permalink</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>

			<% @pages.each do |page| %>
			<tr>
				<td><%= page.name %></td>
				<td><%= page.permalink %></td>
				<td><%= link_to 'Show', page_path(page.permalink) %></td>
				<td><%= link_to 'Edit', edit_page_path(page.permalink) %></td>
				<td><%= link_to 'Destroy', page_path(page.permalink), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>

	</table>
	<br />
	<div>
		<%= link_to 'New Page', new_page_path %>
	</div>

</div>

